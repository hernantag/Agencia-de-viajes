doctype html
include ./layout/head
include ./layout/header
main
  .viajes
    .filters
      .filter-item
        span Mostrar
        input(type='number')
        span entradas
    .viajes-items-container
      each viaje in listviajes
       a(href=`/viajes/${viaje.slug}`)
        div(id=`i${viaje.id_viaje}`).viajes-item(data-title=`${viaje.titulo}`)
          .viajes-item-image
            img(src=`../img/viajes/${viaje.id_viaje}-min.jpg` alt='')
          .viajes-item-precio
            span= `$ ${viaje.precio}`
          .viajes-item-fecha
            .ida
              span.material-symbols-outlined
                | calendar_month
              span= `Ida ${viaje.fecha_ida}`
              .vuelta
              span.material-symbols-outlined
                | calendar_month
              span= `Vuelta ${viaje.fecha_vuelta}`
          .viajes-item-descripcion
            span= viaje.descripcion
              | 
footer.footer
script(src='./js/viajes/viajes.js' type='module')
